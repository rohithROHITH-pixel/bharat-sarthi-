rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of the document.
    function isOwner(docId) {
      return request.auth != null && request.auth.uid == get(/databases/$(database)/documents/news/$(docId)).data.creatorId;
    }
    
    // Helper function to check if the user is an admin.
    function isAdmin() {
      // In a real app, you'd use custom claims. For now, we'll check the UID.
      // Make sure to set up custom claims for production.
      return request.auth != null && request.auth.token.email == "roopanrohith320@gmail.com";
    }

    // Helper function to check if the user is authenticated.
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if the incoming request data's creatorId matches the user's UID.
    function isCreatingAsSelf() {
        return request.resource.data.creatorId == request.auth.uid;
    }

    // Rules for the 'news' collection
    match /news/{newsId} {
      // Anyone can read news articles.
      allow read: if true;

      // Authenticated admins can create, update, or delete articles.
      allow create, update, delete: if isAdmin();
    }
    
    // Rules for the 'newspapers' collection
    match /newspapers/{newspaperId} {
        // Anyone can read (download) newspapers.
        allow read: if true;
        
        // Admins can upload (create) and delete newspapers.
        allow create, delete: if isAdmin();
    }
  }
}
